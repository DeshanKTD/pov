void setWord(){
  playString="";
  wordLength = mainString.length();
  if(wordLength>=sentenceLength-1)
    return;
    
  else if(wordLength==0)
    return;
    
  else if(wordLength==sentenceLength-2){
    playString="."+mainString;
    playString=playString + ".";
    return;
  }
  else{
    int remain = sentenceLength-wordLength;
    if(remain%2){
